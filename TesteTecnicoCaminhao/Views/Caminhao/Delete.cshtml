@model TesteTecnicoCaminhao.Models.Caminhao

@{
    ViewData["Title"] = "Excluir";
}

<h3>Tem certeza que deseja excluir?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Modelo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt>
            Ano Fabricação
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AnoFabricacao)
        </dd>
        <dt>
            Ano Modelo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AnoModelo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-default" />
        <a asp-action="Index" class="btn btn-sm btn-warning">Voltar</a>
    </form>
</div>
