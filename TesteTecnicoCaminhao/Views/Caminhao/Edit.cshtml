@model TesteTecnicoCaminhao.Models.Caminhao

@{
    ViewData["Title"] = "Editar";
    string msg = ViewBag.msg;
}

<br />

<div class="row">
    <div class="col-md-12 text-center" style="display: @(msg == "" ? "none": "normal")">
        <h5 style="color: red;"><strong>@msg</strong></h5>
    </div>

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Modelo</label><br />
                <div class="form-group radio-inline">
                    <label class="control-label"><input type="radio" class="radio-inline" id="" name="Modelo" value="FM" @(Model.Modelo == "FM" ? "checked" : "") /> FM</label>
                </div>
                <div class="form-group radio-inline">
                    <label class="control-label"><input type="radio" class="radio-inline" id="" name="Modelo" value="FH" @(Model.Modelo == "FH" ? "checked" : "") /> FH</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label">Ano Fabricação</label>
                <input asp-for="AnoFabricacao" class="form-control" />
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label">Ano Modelo</label>
                <input asp-for="AnoModelo" class="form-control" />
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-sm btn-default" />
                <a asp-action="Index" class="btn btn-sm btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
